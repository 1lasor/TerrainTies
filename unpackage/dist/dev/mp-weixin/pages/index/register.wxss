
.content {
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
}
.logo {
	height: 200rpx;
	width: 200rpx;
	margin-top: 200rpx;
	margin-bottom: 50rpx;
}
.text-area {
	display: flex;
	justify-content: center;
}
.title {
	font-size: 36rpx;
	color: #8f8f94;
}
.input-area {
	width: 100%;
	display: flex;
	flex-direction: column;
	align-items: center;
	margin-bottom: 20rpx;
}
.input {
	width: 80%;
	height: 80rpx;
	border: 1px solid #ccc;
	border-radius: 10rpx;
	padding: 0 20rpx;
	margin-bottom: 20rpx;
}
